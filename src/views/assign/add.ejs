<%- include('../admin/partials/header.ejs')%>
<div class="flex h-screen bg-gray-50 dark:bg-gray-900" :class="{ 'overflow-hidden': isSideMenuOpen }">
    <%- include('../admin/partials/navegation.ejs')%>
    <%- include('../admin/partials/search.ejs')%>
<div class="container">
    <div class="mx-auto py-10">
        <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4 flex flex-col my-2">
           <form action="/assign/add" method="post">
            <div class="-mx-3 md:flex mb-6">
                <div class="md:w-1/2 px-3 mb-6 md:mb-0">
                  <%if(typeof employees != 'undefined') { %>
                      <label class="block uppercase tracking-wide text-grey-darker text-xs font-bold mb-2" for="grid-last-name">
                          Nombre del empleado
                        </label>
                      <select name="employees" class="block appearance-none w-full bg-grey-lighter border border-grey-lighter text-grey-darker py-3 px-4 pr-8 rounded" id="grid-state">
                          <option selected disabled>Empleado</option>
                          <%employees.forEach((item => {%>
                              <option value="<%=item.names%>"><%=item.id%> : <%=item.names%></option>
                          <%}));%>
                      </select>
                  <%}%>
                </div>
                <div class="md:w-1/2 px-3">
                  <%if(typeof circuit != 'undefined') {%>
                      <label class="block uppercase tracking-wide text-grey-darker text-xs font-bold mb-2" for="grid-last-name">
                          Nombre del circuito
                        </label>
                        <select name="circuit" class="block appearance-none w-full bg-grey-lighter border border-grey-lighter text-grey-darker py-3 px-4 pr-8 rounded" id="grid-state">
                            <option selected disabled>Circuito</option>
                            <%circuit.forEach((item => {%>
                              <option value="<%=item.name%>"><%=item.id%> <%=item.name%></option>
                          <%}));%>
                      </select>
                  <%}%>
                </div>
                <div class="md:w-1/2 px-3">
                    <label class="block uppercase tracking-wide text-grey-darker text-xs font-bold mb-2" for="grid-last-name">
                        Codigo del circuito
                      </label>
                    <input type="number"  placeholder="id del circuito" name="idCircuit" id="idCircuit" class="block appearance-none w-full bg-grey-lighter border border-grey-lighter text-grey-darker py-3 px-4 pr-8 rounded" id="grid-state">
                </div>
              </div>
              <div class="-mx-3 md:flex mb-6">
                <div class="md:w-full px-3">
                  <label class="block uppercase tracking-wide text-grey-darker text-xs font-bold mb-2" for="grid-password">
                    Fecha de asignacion
                  </label>
                  <input name="dates" class="appearance-none block w-full bg-grey-lighter text-grey-darker border border-grey-lighter rounded py-3 px-4 mb-3" id="grid-password" type="date">
                  <p class="text-grey-dark text-xs italic">fecha a laborar</p>
                </div>
              </div>
              <div class="-mx-3 md:flex mb-2">
                <div class="md:w-1/2 px-3 mb-6 md:mb-0">
                  <div class="-mx-3 md:flex mb-6">
                      <div class="md:w-1/2 px-3 mb-6 md:mb-0">
                        <label class="block uppercase tracking-wide text-grey-darker text-xs font-bold mb-2" for="grid-last-name">
                            Entrada
                          </label>
                          <input name="entrance" class="appearance-none block w-full bg-grey-lighter text-grey-darker border border-grey-lighter rounded py-3 px-4 mb-3" id="grid-password" type="time">
                      </div>
                      <div class="md:w-1/2 px-3">
                        <label class="block uppercase tracking-wide text-grey-darker text-xs font-bold mb-2" for="grid-last-name">
                          Culminacion
                        </label>
                        <input  name="exits" class="appearance-none block w-full bg-grey-lighter text-grey-darker border border-grey-lighter rounded py-3 px-4 mb-3" id="grid-password" type="time">
                      </div>
                    </div>
                    <div class="md:w-1/2 px-3">
                        
                        <input type="submit" class="btn bg-blue-500 text-white hover:bg-blue-700">
                      </div>
                    </div>
              </div>
            </div>
        </form>
    </div>
</div>
<%- include('../admin/partials/footer.ejs')%>